@import "variables"
@import "mixins"

.red
    background-color redHighlightPalette !important
    color whitePalette !important
.pink
    background-color pinkMaterial !important
    color whitePalette !important
.brown
    background-color brownMaterial !important
    color whitePalette !important
.orange
    background-color orangeMaterial !important
    color whitePalette !important
.lime
    background-color limeMaterial !important
    color whitePalette !important
.cyan
    background-color cyanMaterial !important
    color whitePalette !important
.blue
    background-color blueStrongPalette !important
    color whitePalette !important

.fa-10x
    font-size 10em !important
.mte//margin top empty
    margin-top 0 !important
.man//margin all normal
    margin 1em !important
.mvn//margin vertical normal
    margin-top 1em !important
    margin-bottom 1em !important
.mtn//margin top normal
    margin-top 1em !important

.pan//padding all normal
    padding 1em !important
.ptn//padding top normal
    padding-top 1em !important
.pbn//padding bottom normal
    padding-bottom 1em !important
.prn//padding right normal
    padding-right 1em !important
.pln//padding left normal
    padding-left 1em !important
.pbn
    padding-bottom 1em !important

.pvs//padding vertical small
    padding-top .5em !important
    padding-bottom .5em !important
.pts
    padding-top .5em !important
.prs
    padding-right .5em !important

.uppercase
    text-transform uppercase!important

.button
    font-weight bolder
    &.in
        margin 0
        position absolute
        right 5px
        bottom 5px
    &.default
        background-color amberMaterial
        {textShadowForWhite}
        &:hover, &:focus
            background-color amberMaterial
        &[disabled]
            background-color amberMaterial
            &:hover
                background-color amberMaterial
        &.confirm
            background-color redHighlightPalette
    &.text, &.text:hover
        background-color transparent !important
        box-shadow none
        color grayPalette !important
        outline 0
        font-weight bolder
        &[disabled]
            color rgba(0, 0, 0, 0.3)
            font-weight normal
        &.success
            color green!important
        &.fail
            color red!important

.watermark
    color rgba(0, 0, 0, 0.3)

.text-uppercase
    text-transform uppercase

.button-inner
    position relative !important
    .input
        height 48px !important

    .textarea
        height 72px !important
    .input, .textarea
        border none !important
        box-shadow-material 1
        color grayPalette !important
        font-size 1.5em !important
        padding 0 115px 0 .5em !important
    button[disabled]:hover
        box-shadow none

.simple-row
    padding-top .5em
    padding-bottom .5em
    border-bottom 1px solid grayLowPalette
    &:hover
        background-color blueLowPalette
    &:last-child
        border-bottom none

.centered-wrapper
    display table
    width 100%
    height 100%
    .centered
        display table-cell
        text-align center
        vertical-align middle

.bg-grayLow
    background-color grayLowPalette

