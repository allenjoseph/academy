@import "variables"
@import "mixins"

.modal-comment
    bottom 0
    display block
    height auto
    left 0
    overflow hidden
    padding 0
    position absolute
    right 0
    top 0
    figure
        margin 0
        img
            height 24px
            border-radius 50%
    .comment-wrapper
        height 100%
        position relative
        overflow hidden
        .comment-header
            background-color blueStrongPalette
            overflow hidden
            padding 0
            .comment-header-top
                height 6em
                overflow hidden
                text-align center
                padding 0.5em 2.5em 0
                a
                    color whitePalette
                    font-size 1.5em
                    font-weight bolder
            .comment-header-footer
                color #333
                height 2em
                span
                    font-size 1em
                    color whitePalette
        .comment-body-wrapper
            height 100%
            overflow hidden
            position absolute
            width 100%
            padding-bottom 15em
            .comment-body-content
                height 100%
                overflow-y auto
                overflow-x hidden
                padding 0 1em
                .comment-entry
                    border-bottom 1px solid smokeLowPalette
                    position relative
                    padding 0.5em 0
                    .comment-entry-figure
                        position absolute
                        width 35px
                        top 0.5em
                    .comment-entry-text
                        margin-left 40px
                        font-size 1em
                        text-align left
                    .comment-entry-text > small
                        position absolute
                        right 1em
                        bottom 0.5em
        .comment-footer
            bottom 0
            display block
            height 7em
            position absolute
            width 100%
            padding 0 1em
            background-color blueStrongPalette
            z-index 1
            span
                font-size 0.8em
                color whitePalette
                line-height 1em
                padding .5em 0
            textarea
                background transparent !important
                border 1px solid whitePalette !important
                color whitePalette !important
                box-shadow none !important
                padding .5em
                width 100%
                height 3em
                margin 0
                font-size 1.5em
                line-height 1em
                &:disabled
                    background-color rgba(255,255,255,.5) !important
                    filter blur(5px) !important
            .comment-footer-confirm
                position absolute
                top 2.5em
                left 0
                width 100%
                margin auto
