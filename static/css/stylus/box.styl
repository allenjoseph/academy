@import "variables"
@import "mixins"

.box
    background-color whitePalette
    border 1px solid transparent
    box-shadow-material 0
    color grayPalette
    margin .5em 0
    transition all 300ms
    &:hover
        box-shadow-material 1
    header
        position relative
        border-bottom 1px solid rgba(0,0,0,.05)
        h1, h2, h3, h4, h5, h6
            color grayPalette !important
    .item
        display block
        line-height 2em
        .figure
            width 10%
            display inline-block
            text-align center
        .description
            display inline-block
            width 90%
            border-bottom 1px solid rgba(0,0,0,.05)
        &:last-child .description
            border-bottom none
