@import "variables"
@import "mixins"

.menu-item
    border-bottom 4px solid transparent
    transition 100ms background-color
    text-align center
    &:hover
        border-bottom-color redMaterial
    a
        color whitePalette
        display block
        text-transform uppercase
        {textShadowForWhite}
.menu-item-user
    img
        height 45px
        position absolute
        right 0
        top 3px
        border-radius 50%

@media only screen and (max-width: 40em)
    .menu-item-user
        img
            display none
